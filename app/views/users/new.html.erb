<%= render 'shared/header', header: "Register" %>
<%= render 'shared/errors', obj: @user %>

<%= form_for @user do |f| %>
  <%= f.label "Username" %>
  <%= f.text_field :username %>
  <br/>
  <%= f.label "E-mail Address" %>
  <%= f.text_field :email %>
  <br/>
  <%= f.label "Password" %>
  <%= f.password_field :password %>
  <br/>
  <%= f.submit "Register", class: "btn btn-default" %>
<% end %>